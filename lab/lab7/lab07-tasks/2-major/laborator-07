	data_2 <span class="sy0">=</span> malloc<span class="br0">&#40;</span><span class="nu0">11</span> <span class="sy0">*</span> <span class="kw4">sizeof</span><span class="br0">&#40;</span><span class="kw4">int</span><span class="br0">&#41;</span><span class="br0">&#41;</span><span class="sy0">;</span>
&nbsp;
	<span class="kw1">for</span> <span class="br0">&#40;</span>i <span class="sy0">=</span> <span class="nu0">0</span><span class="sy0">;</span> i <span class="sy0">&lt;=</span> <span class="nu0">11</span><span class="sy0">;</span> i<span class="sy0">++</span><span class="br0">&#41;</span>
